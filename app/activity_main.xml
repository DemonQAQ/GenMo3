<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".game.MainActivity"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/skill4"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="659dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="140dp"
            app:srcCompat="?android:attr/textSelectHandleLeft" />

        <ImageButton
            android:id="@+id/right"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="49dp"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <ImageButton
            android:id="@+id/skill1"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="414dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="?android:attr/textSelectHandleLeft" />

        <ImageButton
            android:id="@+id/attack"
            android:layout_width="74dp"
            android:layout_height="76dp"
            android:layout_marginStart="519dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="47dp"
            app:srcCompat="@android:drawable/ic_lock_idle_charging" />

        <ImageButton
            android:id="@+id/left"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/skill3"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="578dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="140dp"
            app:srcCompat="?android:attr/textSelectHandleLeft" />

        <ImageButton
            android:id="@+id/item"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="414dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="106dp"
            app:srcCompat="?android:attr/textSelectHandleLeft" />

        <ImageButton
            android:id="@+id/skill2"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginStart="492dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="139dp"
            app:srcCompat="?android:attr/textSelectHandleLeft" />

        <ImageButton
            android:id="@+id/jump"
            android:layout_width="72dp"
            android:layout_height="76dp"
            android:layout_marginStart="613dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="46dp"
            app:srcCompat="@android:drawable/arrow_up_float" />

    </FrameLayout>

    <demon.genmo3.game.core.Engine
        android:id="@+id/gameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>